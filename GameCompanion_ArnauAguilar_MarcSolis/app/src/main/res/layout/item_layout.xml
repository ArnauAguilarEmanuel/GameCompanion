<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_marginHorizontal="10dp"
        android:background="@color/ColorLight"


        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">

    <TextView
            android:background="@color/colorPrimaryDark"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:fontFamily="@font/agencyr"
            android:textStyle="bold"
            android:textSize="30dp"
            android:id="@+id/className"
            android:layout_marginHorizontal="3dp"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:text="Class Name"
            android:textColor="@color/colorIcons"
            />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="3dp"
            android:layout_marginTop="3dp">
        //main weapon
        <FrameLayout
                android:layout_width="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@color/colorPrimaryDark"
                android:layout_height="110dp">
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:id="@+id/mainWeapon">

            </ImageView>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/agencyr"
                    android:textSize="16dp"
                    android:text="@string/main"
                    android:textColor="@color/colorIcons"
                    />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="7dp"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/agencyr"
                    android:id="@+id/mainWeaponName"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:text="MAIN NAME"
                    android:textColor="@color/colorIcons"
                    />


        </FrameLayout>

        //secondary weapon
        <FrameLayout
                android:layout_weight="1.45"
                android:layout_marginLeft="1dp"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:background="@color/colorPrimaryDark">

            <ImageView

                    android:id="@+id/secondaryWeapon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center">

            </ImageView>


            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/agencyr"
                    android:textSize="16dp"
                    android:text="@string/secondary"
                    android:textColor="@color/colorIcons"
                    />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="7dp"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/agencyr"
                    android:id="@+id/secondaryWeaponName"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:text="secondary NAME"
                    android:textColor="@color/colorIcons"
                    />


        </FrameLayout>


    </LinearLayout>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="3dp"
            >

        <ImageView
                android:layout_weight="1"
                android:background="@color/colorPrimaryDark"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"

                android:id="@+id/secondaryAcc1Img">
        </ImageView>

        <ImageView
                android:background="@color/colorPrimaryDark"
                android:layout_weight="1"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/secondaryAcc2Img">
        </ImageView>
        <ImageView
                android:background="@color/colorPrimaryDark"
                android:layout_weight="1"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="15dp"
                android:id="@+id/mainAcc1Img">
        </ImageView>
        <ImageView
                android:layout_weight="1"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:background="@color/colorPrimaryDark"

                android:id="@+id/mainAcc2Img">
        </ImageView>
        <ImageView
                android:background="@color/colorPrimaryDark"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"

                android:id="@+id/mainAcc3Img">
        </ImageView>






        </LinearLayout>
</LinearLayout>